<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sinhadas.learningstation.learningstation.DecisionActivity"
    tools:showIn="@layout/activity_decision">

    <Button
        android:id="@+id/str_hrm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Start HRM!" />

    <Button
        android:id="@+id/stop_hrm"
        android:layout_below="@+id/str_hrm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop HRM!" />
    <TextView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_hrm"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="28dp"
        android:hint="HRM data"/>

</RelativeLayout>
